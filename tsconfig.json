{
	"compilerOptions": {
		"esModuleInterop": true,
		"isolatedModules": true,
		"lib": ["ES2020", "dom"],
		"module": "Preserve",
		"moduleResolution": "Bundler",
		"noEmit": true,
		"noUncheckedIndexedAccess": true,
		"outDir": "out",
		"resolveJsonModule": true,
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"target": "es2022",
		"jsx": "react-jsx"
	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"rsbuild.config.ts",
		"rsbuild.webviews.config.ts",
		"dist"
	]
}
