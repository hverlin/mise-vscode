amends "package://github.com/jdx/hk/releases/download/v0.8.2/hk@0.8.2#/Config.pkl"

min_hk_version = "0.8.2"

local linters = new Mapping<String, Step> {
  ["tsc"] {
    check = "tsc --noEmit"
    glob = List("*.js", "*.ts")
  }
  ["biome"] {
    fix = "biome check --fix"
    check = "biome check"
    glob = List("*.js", "*.ts", "*.json")
  }
}

hooks {
  ["pre-commit"] {
    fix = true
    steps = linters
  }
  ["pre-push"] {
    steps = linters
  }
  ["fix"] {
    steps = linters
  }
  ["check"] {
    steps = linters
  }
}

